using System;
using Microsoft.OData.Client;
using Microsoft.OData.Extensions.Client;

namespace <#=ExtensionNamespace#>
{
    public static class ODataClientFactoryExtensions
    {
        public static DataServiceContext GetContainer(this IODataClientFactory factory, Uri sessionAddress)
        {
            return factory.CreateClient<<#=ContainerNamespace#>.Container>(sessionAddress);
        }
    }
}

<#+    
    internal string ContainerNamespace{get; set;}

    internal string ExtensionNamespace{get; set;}
 #>

